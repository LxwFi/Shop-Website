<head>
<link rel="stylesheet" href="\stylesheets\styling.css"/>
</head>

<Body>   
    <h1 id="header">
        Template
    </h1>

        {{#each items}}
            <script>
                document.getElementById("header").innerText = {{this.category}};
            </script>
        {{/each}}
    
    <br> 

    <div class="row">
    {{#each items}}
        <div class="column">
            <a href="/product/{{this.id}}">
                <div class="card"><img src="{{this.imageUrl}}"><div class="card-body">{{this.title}}</div></div>
            </a>
        </div>
    {{/each}}
    </div>

<script>


    //Change to "Home Page" if there are more than 15 items
    let count = 0;
    {{#each items}}
        count++;
    {{/each}}
    if (count > 19){
        const header = document.getElementById("header");
        header.innerText="Home Page";
    }

</script>
</Body>