                            <img src="https://cdn.onlinewebfonts.com/svg/img_460503.png">
                        </a>
                    </div>
                </li>
            </ul>  
        </nav>  
    </header>  
    <h1 id="header">
        Home page
    </h1>
    
    <br> 

    <div class="row">
    {{#each items}}
        <div class="column">
            <a href="/product/{{this.id}}">
                <div class="card"><img src="{{this.imageUrl}}"><div class="card-body">{{this.title}}</div></div>
            </a>
        </div>  
    {{/each}}
    </div>

<script>
    let count = 0;
    {{#each items}}
        count++;
    {{/each}}
    if (count < 10){
        const header = document.getElementById("header");
        header.innerText="Other";
    }
</script>
</Body>

